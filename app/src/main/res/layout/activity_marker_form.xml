<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkerFormActivity">


    <EditText
        android:id="@+id/afvalNaam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="50dp"
        android:hint="Naam"
        />

    <EditText
        android:id="@+id/afvalBeschrijving"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:lines="4"
        android:hint="Beschrijving"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/afvalNaam"
        />

    <ImageView
        android:id="@+id/fotoUpload"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:hint="Naam"
        android:src="@drawable/camera_icon"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/afvalBeschrijving"
        />


    <Button
        android:id="@+id/butt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neem foto en voeg toe"
        android:layout_margin="80dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/fotoUpload"
        />


</RelativeLayout>